<section class="px-4 py-2">
  <h2 clss="text-2xl font-thin">登入</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email ,class:"block font-semibold"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"px-3 py-2 text-lg border border-grey-400 rounded focus:outline-none" %>
    </div>

    <div class="field">
      <%= f.label :password ,class:"block font-semibold"%>
      <%= f.password_field :password, autocomplete: "current-password",class:"px-3 py-2 text-lg border border-grey-400 rounded focus:outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-2">
      <%= f.submit "登入",class:"bg-gray-300 px-3 py-2 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>

